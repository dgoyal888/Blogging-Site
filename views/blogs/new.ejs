<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add a New Blog</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/blogs" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="blog[title]" placeholder="title">
                </div>
                <div class="form-group">
                    <input id="textbox"class="form-control wideInput" type="text" name="blog[body]" placeholder="content">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/">Go Back</a>
        </div>
    </div>
</div>
